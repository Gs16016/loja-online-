  <title>Loja Online — Modelo</title>
  <style>
    :root{--bg:#0f1724;--card:#0b1220;--accent:#06b6d4;--muted:#94a3b8;--glass: rgba(255,255,255,0.03)}
    *{box-sizing:border-box}
    body{margin:0;font-family:Inter,Segoe UI,Roboto,Arial,sans-serif;background:linear-gradient(180deg,#071023 0%, #071727 100%);color:#e6eef6;-webkit-font-smoothing:antialiased}
    header{display:flex;align-items:center;justify-content:space-between;padding:20px 24px;background:transparent}
    .brand{display:flex;gap:12px;align-items:center}
    .logo{width:44px;height:44px;border-radius:10px;background:linear-gradient(135deg,var(--accent),#7c3aed);display:flex;align-items:center;justify-content:center;font-weight:700;color:#062024}
    h1{font-size:18px;margin:0}
    .search{max-width:420px;flex:1;margin:0 20px}
    .search input{width:100%;padding:10px 12px;border-radius:10px;border:0;background:var(--glass);color:inherit}
    .actions{display:flex;gap:12px;align-items:center}
    .btn{background:var(--accent);border:0;padding:10px 12px;border-radius:10px;color:#012;cursor:pointer}
    .cart-btn{position:relative}
    .badge{position:absolute;top:-6px;right:-6px;background:#ef4444;color:white;border-radius:999px;padding:2px 6px;font-size:12px}

    main{padding:24px;display:grid;grid-template-columns:280px 1fr;gap:24px}
    .sidebar{background:var(--card);padding:16px;border-radius:12px}
    .product-grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(220px,1fr));gap:16px}
    .card{background:linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));padding:14px;border-radius:12px}
    .thumb{height:140px;border-radius:10px;background:#082631;display:flex;align-items:center;justify-content:center;margin-bottom:10px}
    .price{font-weight:700}
    .meta{color:var(--muted);font-size:13px}

    footer{padding:24px;text-align:center;color:var(--muted)}

    /* cart drawer */
    .drawer{position:fixed;right:20px;top:80px;width:360px;max-height:70vh;background:var(--card);border-radius:12px;padding:12px;box-shadow:0 10px 30px rgba(2,6,23,0.6);transform:translateX(110%);transition:transform .28s ease;overflow:auto}
    .drawer.open{transform:translateX(0)}
