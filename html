  <div class="drawer" id="drawer" aria-hidden="true">
    <h3>Seu carrinho</h3>
    <div id="cartList"></div>
    <div style="padding:10px;display:flex;justify-content:space-between;align-items:center">
      <div>
        <div class="meta">Total</div>
        <div id="total" style="font-weight:800;font-size:18px">R$ 0,00</div>
      </div>
      <div style="display:flex;flex-direction:column;gap:8px">
        <button class="btn" id="checkoutBtn">Finalizar (simulação)</button>
        <button id="closeDrawer" style="background:transparent;border:0;color:var(--muted);cursor:pointer">Fechar</button>
