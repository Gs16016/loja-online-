<script>
// ====== Dados de exemplo - personalize aqui ======
const products = [
  {id:1,title:'Camiseta Básica',price:59.90,desc:'Algodão macio, várias cores',tag:'roupa'},
  {id:2,title:'Boné Snapback',price:79.00,desc:'Ajuste traseiro, logo bordado',tag:'acessório'},
  {id:3,title:'Mochila Compacta',price:149.90,desc:'Ideal para dia a dia',tag:'acessório'},
  {id:4,title:'Caneca de Cerâmica',price:39.90,desc:'325ml, resistente',tag:'brinde'},
  {id:5,title:'Adesivo Premium',price:9.90,desc:'Corte em alta precisão',tag:'brinde'}
];

// ====== Utilitários ======
const formatBRL = v => v.toLocaleString('pt-BR',{style:'currency',currency:'BRL'});

// ====== Renderização ======
const grid = document.getElementById('grid');
function renderProducts(list){
  grid.innerHTML='';
  list.forEach(p=>{
    const el = document.createElement('div'); el.className='card';
    el.innerHTML = `
      <div class="thumb"> <svg width="80" height="60" viewBox="0 0 80 60" fill="none" xmlns="http://www.w3.org/2000/svg"><rect width="80" height="60" rx="8" fill="rgba(255,255,255,0.02)"/><text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" font-size="10" fill="rgba(255,255,255,0.35)">${p.title}</text></svg></div>
      <div style="display:flex;justify-content:space-between;align-items:center">
        <div>
          <div style="font-weight:700">${p.title}</div>
          <div class="meta">${p.desc}</div>
        </div>
        <div style="text-align:right">
          <div class="price">${formatBRL(p.price)}</div>
          <button class="btn" data-id="${p.id}" style="margin-top:8px">Adicionar</button>
        </div>
      </div>
    `;
    grid.appendChild(el);
  });
}
renderProducts(products);

// ====== Busca e filtros ======
document.getElementById('q').addEventListener('input', e=>{
  const q = e.target.value.toLowerCase().trim();
  const filtered = products.filter(p=> p.title.toLowerCase().includes(q) || p.desc.toLowerCase().includes(q) || p.tag.toLowerCase().includes(q));
  renderProducts(filtered);
});

document.getElementById('applyFilter').addEventListener('click', ()=>{
  const min = parseFloat(document.getElementById('minPrice').value) || 0;
  const max = parseFloat(document.getElementById('maxPrice').value) || Infinity;
  const filtered = products.filter(p=> p.price >= min && p.price <= max);
  renderProducts(filtered);
});

// ====== Carrinho (localStorage) ======
let cart = JSON.parse(localStorage.getItem('cart_v1') || '[]');
function saveCart(){ localStorage.setItem('cart_v1', JSON.stringify(cart)); updateCartUI(); }

function addToCart(id){
  const prod = products.find(p=>p.id==id); if(!prod) return;
  const item = cart.find(i=>i.id==id);
  if(item) item.q += 1; else cart.push({id:prod.id,title:prod.title,price:prod.price,q:1});
  saveCart();
}

// event delegation for add buttons
grid.addEventListener('click', e=>{
  const btn = e.target.closest('button[data-id]');
  if(!btn) return;
  const id = Number(btn.dataset.id);
  addToCart(id);
});

// cart drawer
const drawer = document.getElementById('drawer');
const cartList = document.getElementById('cartList');
const cartCount = document.getElementById('cartCount');
function updateCartUI(){
  // render list
  cartList.innerHTML='';
  if(cart.length===0){ cartList.innerHTML='<p class="meta">Carrinho vazio</p>'; cartCount.style.display='none'; document.getElementById('total').textContent = formatBRL(0); return; }
  cart.forEach(item=>{
    const node = document.createElement('div'); node.className='cart-item';
    node.innerHTML = `
      <div style="flex:1">
        <div style="font-weight:700">${item.title}</div>
        <div class="meta">${formatBRL(item.price)} x ${item.q} = ${formatBRL(item.price * item.q)}</div>
      </div>
      <div class="qty">
        <button data-op="dec" data-id="${item.id}">-</button>
        <div>${item.q}</div>
        <button data-op="inc" data-id="${item.id}">+</button>
      </div>
    `;
    cartList.appendChild(node);
  });
  const total = cart.reduce((acc,i)=> acc + (i.price * i.q), 0);
  document.getElementById('total').textContent = formatBRL(total);
  const count = cart.reduce((acc,i)=> acc + i.q, 0);
  cartCount.textContent = count; cartCount.style.display='inline-block';
}
updateCartUI();

// open/close
document.getElementById('openCart').addEventListener('click', ()=>{ drawer.classList.add('open'); drawer.setAttribute('aria-hidden','false'); });
document.getElementById('closeDrawer').addEventListener('click', ()=>{ drawer.classList.remove('open'); drawer.setAttribute('aria-hidden','true'); });

// qty buttons
cartList.addEventListener('click', e=>{
  const b = e.target.closest('button[data-op]'); if(!b) return;
  const id = Number(b.dataset.id); const op = b.dataset.op;
  const it = cart.find(x=>x.id===id); if(!it) return;
  if(op==='inc'){ it.q += 1; } else { it.q = Math.max(0, it.q - 1); }
  cart = cart.filter(x=> x.q>0);
  saveCart();
});

// checkout simulation
document.getElementById('checkoutBtn').addEventListener('click', ()=>{
  if(cart.length===0){ alert('Carrinho vazio'); return; }
  // aqui você pode integrar com API de pagamento (Mercado Pago, Pagar.me, Pix etc.)
  alert('Simulação: pedido registrado. Você pode integrar pagamentos com Mercado Pago/Pix quando estiver pronto.');
  cart = []; saveCart(); drawer.classList.remove('open');
});

// clear local
document.getElementById('clearLocal').addEventListener('click', ()=>{ if(confirm('Limpar carrinho e configurações locais?')){ cart = []; localStorage.removeItem('cart_v1'); updateCartUI(); } });

// expose for dev console
window.__LOJA = {products, cart, addToCart, saveCart};
</script>
</body>
</html>
